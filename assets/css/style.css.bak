body {
    font-family: Lucida Sans Unicode, Arial, Sans-Serif;
    font-size: 13px;
}
#header {
    width: 100%;
    margin: 8px auto;
    overflow: hidden;
}
#main {
    width: 100%;
    overflow: hidden;
}
#content {
    width: 100%;
    float: left;
}
@media screen and (max-width: 320px) {
    /* comes into effect for screens less than or equal to 320 pixels */
    
    #main {
        margin: 0px auto;
    }
    #comments {
        width: 100%;
        float: left;
    }
    #sidebar {
        width: 100%;
        float: left;
    }
    #footer {
        width: 100%;
        margin: 0px auto;
    }
    #header,
    #content,
    #comments,
    #sidebar,
    #footer {
        background-color: #F6F6F6;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
    }
    #header,
    #comments,
    #footer {
        margin: 5px 0px;
    }
    .toplogo {
        height: 32px;
        float: left;
    }
}
@media screen and (min-width: 321px) and (max-width: 480px) {
    /* comes into effect for screens between 321 and 480 pixels (inclusive) */
    .toplogo {
        height: 32px;
        float: left;
    }
}
@media screen and (min-width: 481px) {
    /* comes into effect for screens larger than or equal to 481 pixels */
    #main {
        margin: 1em auto;
    }
    #content {
        width: 70%;
    }
    #comments {
        width: 100%;
        float: right;
    }
    #sidebar {
        margin-left: 71%;
    }
    #footer {
        width: 100%;
        margin: 0px auto;
    }
    #header,
    #content,
    #comments,
    #sidebar,
    #footer {
        background-color: #F6F6F6;
        -moz-border-radius: 10px;
        -webkit-border-radius: 10px;
    }
    #header,
    #comments,
    #footer {
        margin: 10px 0px;
    }
    .toplogo {
        height: 80px;
        float: left;
    }
    .video-container {
        position: relative;
        width: 100%; /* Full width */
        padding-bottom: 56.25%; /* Aspect ratio: 16:9 */
        background: #000; /* Optional: black background */
    }

    /* Position the video player absolutely inside the container */
    .video-container .video-js {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
}
/* Structure */

#header h1 {
    float: right;
    margin: 20px 0 0 0;
    font-size: 36px;
    font-weight: bold;
}
#header h2 {
    font-size: 16px;
    font-weight: normal;
    margin: 0px;
    padding: 0px;
}
#toolbox {
    text-align: right;
    float: right;
}
#comments p span {
    display: block;
    font-size: 16px;
    color: #B0232A;
}
#sidebar #ads {
    width: 100%;
    overflow: hidden;
}
#sidebar #ads img {
    float: left;
    margin: 5px;
    display: block;
}
/* Change view sprites */

.toolbox {
    float: right;
    margin-left: 10px;
}
.toolbox a {
    width: 30px;
    height: 20px;
    float: right;
}

/* Different views */

a {
    color: #0000ff;
}
h3 {
    font-size: 24px;
    font-weight: normal;
    padding: 0;
    margin: 0;
    color: #B0232A;
}
em {
    font-size: 10px;
}
